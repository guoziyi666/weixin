/* pages/warn/warn.wxss */

.container{
  margin-top: -200rpx;
  width: 100%;
  background-color: #f2f2f2;
}
.title{
  padding: 40rpx 0 40rpx 50rpx;
  font-size: 28rpx;
  background-color: #f2f2f2;
}
.choose{
 
  background-color: #fff;
}
.choose checkbox-group{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
  padding: 50rpx;
}
checkbox-group checkbox{
  width: 45%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 2rpx solid #b9dd08;
  margin-top: 36rpx;
  border-radius: 15rpx;
}
checkbox-group checkbox:nth-of-type(1),checkbox-group checkbox:nth-of-type(2){
  margin-top: 0;
}
.action{
  width: 100%;
}
.action-pics{
   width: 100%;
  background-color: #fff;
  padding: 30rpx 0 30rpx 40rpx;
}
.action-pics image{
  height: 120rpx;
  width: 120rpx;
  margin-right: 59rpx;
  margin-bottom: 59rpx;
  position: relative;
  overflow: visible;
  vertical-align: top;
}
.action-pics image icon{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.action-pics .add{
  height: 120rpx;
  width: 120rpx;
  border: 2px dotted #ccc;
  display: inline-block;
  font-size: 24rpx;
  color: #ccc;
  line-height: 120rpx;
  text-align: center;
}
.action-input{
  width: 100%;
  margin-top: 40rpx;
  background-color: #fff;
  padding: 40rpx 0 40rpx 50rpx;
}
.action-input input{
  width: 90%;
  padding: 20rpx 0;
}
.action-input input:nth-of-type(1){
  border-bottom: 1px solid #ccc;
}
.action-submit{
  width: 100%;
}
.action-submit button{
  width: 90%;
  background-color: #b9dd08;

}